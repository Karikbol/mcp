{
  "name": "telegram-bot-mcp-server",
  "version": "1.0.0",
  "description": "Production MCP server for Telegram Bot (orders, services, providers, admin)",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:stdio": "node dist/stdio-entry.js",
    "dev": "tsx watch src/index.ts",
    "dev:stdio": "tsx src/stdio-entry.ts",
    "migrate": "tsx src/db/migrate.ts",
    "lint": "eslint src --ext .ts",
    "test": "vitest run"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "fastify": "^5.1.0",
    "@fastify/cors": "^10.0.1",
    "pg": "^8.13.0",
    "ioredis": "^5.4.1",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.23.8",
    "openai": "^4.77.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/pg": "^8.11.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.0",
    "eslint": "^9.16.0",
    "vitest": "^2.1.0"
  }
}
