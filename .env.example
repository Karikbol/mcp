# MCP Server
NODE_ENV=development
PORT=3100
MCP_BEARER_TOKEN=change-me-in-production-use-strong-random-token
ADMIN_IDS=123456789,987654321

# Database
DATABASE_URL=postgresql://mcp:mcp_password@localhost:5432/mcp_db

# Redis
REDIS_URL=redis://localhost:6379

# LLM - OpenAI only (no Ollama; recommended for VPS with limited RAM)
OPENAI_API_KEY=sk-...
OPENAI_ONLY=true
OPENAI_MODEL=gpt-4o-mini

# LLM - Optional: Ollama as primary, OpenAI as fallback (set OPENAI_ONLY=false)
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=deepseek-r1:1.5b
# OPENAI_FALLBACK_ENABLED=true
# OPENAI_FALLBACK_MODEL=gpt-4o-mini

# Rate Limits
RATE_LIMIT_IP_PER_MIN=60
RATE_LIMIT_USER_PER_DAY=200

# VPS fs/shell tools (vps_fs_list, vps_fs_copy, vps_fs_move, vps_shell_exec)
# On VPS: mount host path so container sees /www/wwwroot/telegrambot (see docker-compose volumes)
VPS_FS_BASE_PATH=/www/wwwroot/telegrambot
# VPS_FS_MOUNT_PATH=/www/wwwroot/telegrambot
VPS_SHELL_TIMEOUT_SEC=60
